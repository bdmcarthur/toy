<div class="bg-light mx-auto rounded pb-4">
 
  
  <h1 class='mb-4 text-center font-weight-bold'>{{toy.name}}</h1>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-50 mx-auto" src="{{toy.image}}" alt="First slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class='container px-5 text-center'>
    <p class="my-2 pb-3 text-center">{{toy.category}} years</p>
    <p class="my-2 pb-3 text-center">{{toy.description}}</p>
    <p class="my-2 pb-3 text-center">Added By: {{toy._addedBy.name}}</p>
    <form action="/addFavorite/{{toy._id}}" method="POST">
        <button class="btn btn-sm btn-secondary rounded-pill mx-5 my-4" type='submit'>Save</button>
      </form>
  </div>
  
  <div class='mx-auto text-center'> 
    <h1>Contact</h1>
     
    <form action="/contact" id="contact-form" method="post" role="form">
   <div class="form-group">
    <label for="exampleInputPassword1">Name</label>
    <input  id="name" 
      name="name" 
      type="text" 
      placeholder="Your name"  class="form-control" id="exampleInputPassword1">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your email">
  </div>

 <div class="form-group">
    <label for="exampleFormControlTextarea1">Message</label>
    <textarea name="message" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <button type="submit" class="btn myButton btn-primary mx-5">Submit</button>
</form>
  </div>
</div>

