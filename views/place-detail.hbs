<div class="bg-light mx-auto rounded pb-4">
  <form action="/addFavorite/{{place._id}}" method="POST">
    <button class="favButton" type='submit'><i class="fas fa-heart"></i></button>
  </form>
  
  <h1 class='mb-4 text-center placeName font-weight-bold'>{{place.name}}</h1>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-50 mx-auto" src="{{place.image}}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-50 mx-auto" src="{{place.image}}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-50 mx-auto" src="{{place.image}}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class='container px-5'>
    <p class="description my-2 pb-3 text-center">{{place.description}}</p>
  </div>
</div>
